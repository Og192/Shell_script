#!/bin/bash
#Program:
#	if else test
#History:
#	2012.12.20

read -p "Please input (Y/n): " yn

if [ "$yn" == "Y" ] || [ "$yn" == "y" ] ; then
	echo "OK , you choose Yes, good choices"

elif [ "$yn" == "n" ] || [ "$yn" == "N" ] ; then
	echo "Oh, you choose NO, right?"
else
	echo "What you input about"
fi
