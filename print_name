#!/bin/bash
#Program:
#	print name what you input.
#History:
#	2012/12/20/

#print info to tell you input your first name
read -p "Please input your first name: " firstname

#print info to tell you input your second name
read -p "Please input your last name:  " lastname

#print the full name
echo -e "\n Your full name is : $firstname $lastname"
